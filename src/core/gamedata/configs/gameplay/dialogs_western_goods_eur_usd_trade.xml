<game_dialogs>

    <!--=============================================================================================================-->
    <!--    EUR/USD Trade Dialog                                                                                     -->
    <!--=============================================================================================================-->

    <dialog id="western_goods_trade_eur_usd">
        <precondition>western_goods_trade_eur_usd.cond_trade_dialog</precondition>
        <phrase_list>
            <phrase id="0"> <!-- actor -->
                <text>st_wg_trade_eur_usd_ask</text>
                <next>1</next>
            </phrase>
            <phrase id="1"> <!-- npc -->
                <rand_text>st_wg_trade_eur_usd_ask_reply_</rand_text>
                <action>western_goods_trade_eur_usd.start_trade</action>
            </phrase>
        </phrase_list>
    </dialog>

</game_dialogs>