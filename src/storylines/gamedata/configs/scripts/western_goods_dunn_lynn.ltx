[section@squad]
target@base                      = ds2_lager_st

[section@logic]
logic@dunn_lynn

;;====================================================================================================================;;
;;==================| Logic |=========================================================================================;;
;;====================================================================================================================;;

[logic@dunn_lynn]
suitable                         = {=check_npc_name(stalker_dunn_lynn)} true
active                           = beh@stand
relationship                     = neutral
net_spawn                        = pt1

;;====================================================================================================================;;
;;==================| Scheme |========================================================================================;;
;;====================================================================================================================;;

[beh@general]
behavior_state                   = beh_move
target                           = waypoint

invulnerable                     = true
before_hit                       = invulnerable
meet                             = meet@base

use_camp                         = true
turn_on_campfire                 = true

path_end                         = loop

[beh@stand]:beh@general
pt1                              = 88860000, guard | pos:-188.3874206543,0.27924370765686,-151.80142211914 look:-188.39450782351,0.27924370765686,-152.79586738348

;;====================================================================================================================;;
;;==================| Meet |==========================================================================================;;
;;====================================================================================================================;;

[meet@base]
close_snd_hello                  = meet_hello
close_snd_bye                    = nil
close_anim                       = nil
close_victim                     = nil
close_distance                   = 0
far_anim                         = nil
far_victim                       = nil
far_distance                     = 0
meet_on_talking                  = false
use                              = true