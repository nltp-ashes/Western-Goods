[logic]
active                  = ph_button@locked

[ph_button@locked]
anim                    = idle
tooltip                 = st_wg_access_keycard_required
on_press                = ph_button@locked %=play_sound(western_goods_keycard_denied)%
on_info                 = {=actor_has_item(wg_keycard_yellow)} ph_button@unlockable

[ph_button@unlockable]
anim                    = idle
tooltip                 = st_wg_access_use_access_keycard
on_press                = ph_button@close %=play_sound(western_goods_keycard_granted) +lx8_green_on =turn_off(lx8_light_switch_1_red_id) =turn_on(lx8_light_switch_1_green_id)%
on_info                 = {!actor_has_item(wg_keycard_yellow)} ph_button@locked

[ph_button@close]
anim                    = idle
tooltip                 = st_wg_open_door
on_press                = ph_button@open %+lx8_door_open =anim_obj_forward(lx8_physic_door)%

[ph_button@open]
anim                    = idle
tooltip                 = st_wg_close_door
on_press                = ph_button@close %-lx8_door_open =anim_obj_backward(lx8_physic_door)%