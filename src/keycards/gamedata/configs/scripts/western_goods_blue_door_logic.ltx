[logic]
active                  = ph_door@locked

[ph_door@locked]
locked                  = true
closed                  = true
snd_open_start          = western_goods_keycard_denied
snd_close_start         = western_goods_no_sound
snd_close_stop          = western_goods_no_sound
on_info                 = {=actor_has_item(wg_keycard_blue)} ph_door@unlockable
tip_open                = st_wg_access_keycard_required
tip_close               = st_wg_close_door

[ph_door@unlockable]
locked                  = true
closed                  = true
snd_open_start          = western_goods_keycard_granted
snd_close_start         = western_goods_no_sound
snd_close_stop          = western_goods_no_sound
on_info                 = {!actor_has_item(wg_keycard_blue)} ph_door@locked
on_use                  = ph_door@close
tip_open                = st_wg_access_use_access_keycard
tip_close               = st_wg_close_door

[ph_door@close]
locked                  = false
closed                  = true
snd_open_start          = western_goods_door_metal_window_open
snd_close_start         = western_goods_door_metal_window_close_start
snd_close_stop          = western_goods_door_metal_window_close_stop
on_use                  = ph_door@open
tip_open                = st_wg_open_door
tip_close               = st_wg_close_door

[ph_door@open]
locked                  = false
closed                  = false
snd_open_start          = western_goods_door_metal_window_open
snd_close_start         = western_goods_door_metal_window_close_start
snd_close_stop          = western_goods_door_metal_window_close_stop
on_use                  = ph_door@close
tip_open                = st_wg_open_door
tip_close               = st_wg_close_door

[collide]
ignore_static
ignore_small_objects
not_collide_parts       = 1
