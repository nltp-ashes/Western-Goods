function UILighter:Update()

    CUIScriptWnd.Update(self)

    local tg = time_global()

    if (tg < self.m_update_timer) then
        return
    else
        self.m_update_timer = tg + CONST_UPDATE_FREQ
    end

    --self:UpdateLight()
    --self:DebugLightBone()
end

function UILighter:UpdateLight()
    local pos = self:GetLightBonePosition()
    if not pos then return end

    self.m_light:set_position(pos)
    self.m_light:update()
end

function UILighter:GetLightBonePosition()
    local obj = db.actor:active_detector()
    if not obj then return end

    return western_goods_utils.get_bone_position(obj, "lid", true)
end

function UILighter:DebugLightBone()
    local pos = self:GetLightBonePosition()
    if not pos then return end

    local box = debug_render.add_object(12, DBG_ScriptObject.box):cast_dbg_box()
    box.size = vector():set(0.01,0.01,0.01)
    box.matrix = matrix():translate(pos)
    box.hud = true
end