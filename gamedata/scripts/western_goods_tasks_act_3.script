        if tsk.stage == 0 then
            local squad_se = western_goods_utils.se_object_by_sid("western_goods_ssu_prisoner_squad")
            return squad_se and squad_se.id
        end
        if tsk.stage == 1 then
            local squad_se = western_goods_utils.se_object_by_sid("western_goods_ssu_bounty_squad")
            return squad_se and squad_se.id
        end
