        end
        if tsk.stage == 3 then
            local document_se = western_goods_utils.se_object_by_sid("wg_deployment_notice_quest_item")
            return document_se and document_se.id
        end
        if tsk.stage == 4 then
            local squad_se = western_goods_utils.se_object_by_sid("stalker_danylo_chernenko_squad")
            return squad_se and squad_se.id
        end
    end
