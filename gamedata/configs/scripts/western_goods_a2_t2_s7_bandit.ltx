[section@squad]
target@base                      = pri_a28_school

[section@logic]
logic@bandit_1
logic@bandit_2
logic@bandit_3

;;====================================================================================================================;;
;;==================| Logic |=========================================================================================;;
;;====================================================================================================================;;

[logic@base]
suitable                         = {=npc_squad_name(western_goods_act_2_task_2_bandit_2_squad)} true
relationship                     = enemy
net_spawn                        = pt1

[logic@bandit_1]:logic@base
active                           = {-western_goods_act_2_task_2_bandit_2_moved} beh@point_spawn_a, beh@point_attack_a

[logic@bandit_2]:logic@base
active                           = {-western_goods_act_2_task_2_bandit_2_moved} beh@point_spawn_b, beh@point_attack_b

[logic@bandit_3]:logic@base
active                           = {-western_goods_act_2_task_2_bandit_2_moved} beh@point_spawn_c, beh@point_attack_c

;;====================================================================================================================;;
;;==================| Scheme |========================================================================================;;
;;====================================================================================================================;;

[beh@base]
behavior_state                   = beh_move
target                           = waypoint
path_end                         = loop

