[meet@base]
close_snd_hello = meet_hello
close_snd_bye   = nil
close_anim 		= nil
close_victim 	= nil
close_distance  = 0
far_anim 		= nil
far_victim 		= nil
far_distance 	= 0
meet_on_talking	= false
use				= true