[section@squad]
target@base 				    = gar_smart_terrain_6_3

[section@logic]
logic@western_goods_oleksandr_chernenko

;;--================================================================================================================--;;
;;--================| Logic |=======================================================================================--;;
;;--================================================================================================================--;;

[logic@western_goods_oleksandr_chernenko]
suitable 						= {=check_npc_name(stalker_oleksandr_chernenko)} true
prior 							= 140
active 							= beh@stand
level_spot 						= quest_npc
relationship 					= neutral
dont_keep_items 				= true
net_spawn						= pt1

;;--================================================================================================================--;;
;;--================| Scheme |======================================================================================--;;
;;--================================================================================================================--;;

[beh@general]
behavior_state 					= beh_move

target 							= waypoint
walk_dist 						= 100
jog_dist 						= 220

walk_anim 						= walk
jog_anim 						= rush
run_anim 						= rush

gather_items_enabled 			= false
help_wounded_enabled 			= false
corpse_detection_enabled 		= false
invulnerable 					= true
relationship 					= neutral
meet 							= meet@base
before_hit						= invulnerable
	
enemy_ignore_cond				= {!is_enemy_actor !fighting_dist_le(40)} true
combat_ignore_cond 				= {=is_warfare} false, {=actor_true_enemy =check_enemy_name(actor)} false, true
combat_ignore_keep_when_attacked= {=is_warfare} false, true

[beh@stand]:beh@general
pt1								= 25000, fold_arms  | pos:106.6706161499,-5.675573348999,158.73492431641 look:106.98273056746,-5.675573348999,157.79127943516
path_end 						= loop

