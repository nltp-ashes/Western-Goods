<!--    UI Template for the Compass of Western Goods.                                                                -->
<!--                                                                                                                 -->
<!--    Note : Since this UI is displayed in the game world, and not on a 2D display, coordinates aren't in pixels.  -->
<!--                                                                                                                 -->
<!--=================================================================================================================-->
<w>
    <compass>
        <!-- Speed display -->
        <speed>
            <m x="0.004625" y="0.0" width="0.003625" height="0.009" stretch="1" />
            <dm x="0.00875" y="0.0" width="0.003625" height="0.009" stretch="1" />
            <background x="0.0" y="0.0" width="0.0170" height="0.009" stretch="1">
                <texture shader="hud\p3d">wg_cp_background</texture>
            </background>
        </speed>

        <!-- Distance to waypoint display -->
        <dist>
            <km x="0.0205" y="0.0" width="0.003625" height="0.009" stretch="1" />
            <dot x="0.0225625" y="0.0" width="0.003625" height="0.009" stretch="1">
                <texture shader="hud\p3d">wg_cp_char_dot</texture>
            </dot>
            <hm x="0.024625" y="0.0" width="0.003625" height="0.009" stretch="1" />
            <dam x="0.02875" y="0.0" width="0.003625" height="0.009" stretch="1" />
            <background x="0.0179375" y="0.0" width="0.0170" height="0.009" stretch="1">
                <texture shader="hud\p3d">wg_cp_background</texture>
            </background>
        </dist>

        <!-- Estimated Time of Arrival (ETA) to waypoint display -->
        <eta>
            <hh x="0.0005" y="0.01" width="0.003625" height="0.009" stretch="1" />
            <h x="0.004625" y="0.01" width="0.003625" height="0.009" stretch="1" />
            <dots x="0.0066875" y="0.01" width="0.003625" height="0.009" stretch="1">
                <texture shader="hud\p3d">wg_cp_char_dots</texture>
            </dots>
            <mm x="0.00875" y="0.01" width="0.003625" height="0.009" stretch="1" />
            <m x="0.012875" y="0.01" width="0.003625" height="0.009" stretch="1" />
            <background x="0.0" y="0.01" width="0.0170" height="0.009" stretch="1">
                <texture shader="hud\p3d">wg_cp_background</texture>
            </background>
        </eta>

        <!-- Time to waypoint display -->
        <time>
            <mm x="0.0184375" y="0.01" width="0.003625" height="0.009" stretch="1" />
            <m x="0.0225625" y="0.01" width="0.003625" height="0.009" stretch="1" />
            <dots x="0.024625" y="0.01" width="0.003625" height="0.009" stretch="1">
                <texture shader="hud\p3d">wg_cp_char_dots</texture>
            </dots>
            <ss x="0.0266875" y="0.01" width="0.003625" height="0.009" stretch="1" />
            <s x="0.0308125" y="0.01" width="0.003625" height="0.009" stretch="1" />
            <background x="0.0179375" y="0.01" width="0.0170" height="0.009" stretch="1">
                <texture shader="hud\p3d">wg_cp_background</texture>
            </background>
        </time>

        <!-- Compass display -->
        <heading>
            <cursor x="0.0045" y="0.02" width="0.026" height="0.026" stretch="1" align="c" heading="1" heading_angle="0">
                <texture shader="hud\p3d">wg_cp_cursor</texture>
            </cursor>

            <background x="0.0045" y="0.02" width="0.026" height="0.026" stretch="1" align="c" heading="1" heading_angle="0">
                <texture shader="hud\p3d">wg_cp_heading</texture>
            </background>
        </heading>
    </compass>
</w>