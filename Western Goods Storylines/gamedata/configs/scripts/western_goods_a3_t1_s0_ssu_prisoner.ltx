[section@squad]
target@base                      = jup_a6

[section@logic]
logic@prisoner

;;====================================================================================================================;;
;;==================| Logic |=========================================================================================;;
;;====================================================================================================================;;

[logic@prisoner]
suitable                         = {=npc_squad_name(western_goods_ssu_prisoner_squad)} true
active                           = beh@prisoner
relationship                     = enemy
net_spawn                        = pt1

;;====================================================================================================================;;
;;==================| Scheme |========================================================================================;;
;;====================================================================================================================;;

[beh@base]
behavior_state                   = beh_move
target                           = waypoint
meet                             = meet@base

invulnerable                     = true
before_hit                       = invulnerable

enemy_ignore_cond                = true
combat_ignore_cond               = true
combat_ignore_keep_when_attacked = true

[beh@prisoner]:beh@base
pt1                              = 88860000, prisoner | pos:-10.916591644287,23.103925704956,244.75860595703 look:-10.150331318378,23.103925704956,245.40033143759
path_end                         = loop

;;====================================================================================================================;;
;;==================| Meet |==========================================================================================;;
;;====================================================================================================================;;

[meet@base]
close_snd_hello                  = meet_hello
close_snd_bye                    = nil
close_anim                       = nil
close_victim                     = nil
close_distance                   = 0
far_anim                         = nil
far_victim                       = nil
far_distance                     = 0
meet_on_talking                  = false
use                              = true